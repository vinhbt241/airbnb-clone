<div class="w-screen h-screen flex flex-col gap-4 items-center justify-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false", class: "flex flex-col gap-4 items-center"}, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"py-3 border border-gray-400 rounded-lg" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password", class:"py-3 border border-gray-400 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirm", class:"py-3 border border-gray-400 rounded-lg" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "w-full rounded-md border border-transparent bg-pinkRed px-4 py-2 text-base font-bold text-white shadow-sm" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
