<div class="w-screen h-screen flex items-center justify-center authentication__container">
  <div class="flex flex-col gap-4 items-center justify-center bg-white p-16 rounded-3xl">
    <h2 class="font-bold text-2xl">Sign up</h2>

    <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false", class: "flex flex-col gap-6 items-center"}, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0" %>
      </div>

      <div class="field flex flex-col gap-2 items-center justify-center">
        <div class="w-full text-lg">
          <em>Password must contain at least one uppercase character, one number,</em>
          <br />
          <em>one special symbol and have minimum length of 8 characters.</em>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password", class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0", pattern: "^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,}$" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirm", class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "w-full rounded-md border border-transparent bg-pinkRed px-4 py-2 text-xl font-bold text-white shadow-sm" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
