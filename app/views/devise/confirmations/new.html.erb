<div class="w-screen h-screen flex items-center justify-center authentication__container">
  <div class="flex flex-col gap-4 items-center justify-center bg-white p-16 rounded-3xl">
    <h2 class="font-bold text-2xl">Resend confirmation instructions</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {'data-turbo' => "false", method: :post, class: "flex flex-col gap-6 items-center" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "w-full rounded-md border border-transparent bg-pinkRed px-4 py-2 text-xl font-bold text-white shadow-sm" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
