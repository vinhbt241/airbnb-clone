<div class="w-screen h-screen flex flex-col gap-4 items-center justify-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false", class: "flex flex-col gap-4 items-center"},url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"py-3 border border-gray-400 rounded-lg" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class:"py-3 border border-gray-400 rounded-lg", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full rounded-md border border-transparent bg-pinkRed px-4 py-2 text-base font-bold text-white shadow-sm" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

