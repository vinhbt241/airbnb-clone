<div class="w-screen h-screen flex items-center justify-center authentication__container">
  <div class="flex flex-col gap-4 items-center justify-center bg-white p-16 rounded-3xl">
    <h2 class="font-bold text-2xl">Log in</h2>

    <%= form_for(resource, as: resource_name, html: {'data-turbo' => "false", class: "flex flex-col gap-6 items-center"},url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class:"py-2 border border-2 border-gray-400 text-xl rounded-lg w-80 text-center focus:border-black focus:border-2 focus:ring-0", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full rounded-md border border-transparent bg-pinkRed px-4 py-2 text-xl font-bold text-white shadow-sm" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

